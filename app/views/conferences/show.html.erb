<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @conference.name %>
</p>

<p>
  <strong>Location:</strong>
  <%= @conference.location %>
</p>

<%= link_to 'Edit', edit_conference_path(@conference) %> |
<%= link_to 'Back', conferences_path %>

<p><%= link_to 'Add Talk', new_conference_talk_path(@conference) %></p>
<p>
  <strong>Talks:</strong>
  <% @conference.talks.each do |talk| %>
    <p><%= link_to talk.title, conference_talk_path(@conference, talk) %></p>
  <% end %>
</p>
