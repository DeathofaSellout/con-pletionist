<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @conference.name %>
</p>

<p>
  <strong>Location:</strong>
  <%= @conference.location %>
</p>

<hr>

<%= link_to 'Edit', edit_conference_path(@conference) %> |
<%= link_to 'Back', conferences_path %> |
<%= link_to 'Add Talk', new_conference_talk_path(@conference) %> |
<%= link_to "View JSON", {:format => :json } %>

<hr>

<p>
  <strong>Talks:</strong> (<%= link_to "detail view", conference_talks_path(@conference) %>)
  <% @conference.talks.each do |talk| %>
    <li><%= link_to talk.title, conference_talk_path(@conference, talk) %></li>
  <% end %>
</p>
